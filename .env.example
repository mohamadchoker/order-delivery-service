# Order Delivery Service - Environment Variables
# Copy this file to .env for local development

# Server
PORT=50051
METRICS_PORT=9090
SHUTDOWN_TIMEOUT=30s

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=order_delivery_db
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Logging
LOG_LEVEL=info
LOG_DEV=false
